<?xml version="1.0"?>
<reports 
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
  xmlns:xsd="http://www.w3.org/2001/XMLSchema"
  xsi:schemaLocation="http://localhost:8080/taxonomy/basic.xsd">
  
  <balanceSheetRequest>
    <generator>
      <date>2014-08-28T10:58:40.000165Z</date>
      <source>LODGEIT</source>
      <author>
        <firstname>David</firstname>
        <lastname>Joe</lastname>
        <company>XYZ Company Pvt Ltd</company>
      </author>
    </generator>
    <company>
      <abn>11111111111</abn>
      <anzsic />
    </company>

    <!-- Needed for computation of retained earnings in balance sheet. -->
    <startDate>2015-07-01</startDate>
    <!-- Needed for computation of most fields in balance sheet. -->
    <endDate>2018-06-30</endDate>

    <!-- If a unitType is not specified in a transaction below, then the first usable unitType from this list is taken. -->
    <defaultUnitTypes>
      <unitType>AUD</unitType>
    </defaultUnitTypes>

    <!-- Needed for the tracking of units in inventory. Also needed for correct computation of gains and losses. -->
    <unitValues>
      <unitValue>
        <unitType>BHP</unitType>
        <unitValue>2</unitValue>
        <unitValueCurrency>USD</unitValueCurrency>
      </unitValue>
      <unitValue>
        <unitType>TLS</unitType>
        <unitValue>5</unitValue>
        <unitValueCurrency>AUD</unitValueCurrency>
      </unitValue>
    </unitValues>

    <!-- custom account hierarchy can be referenced. If not, the default is used -->
    <!-- 
        <accountHierarchyUrl>https://raw.githubusercontent.com/LodgeiT/labs-accounts-assessor/prolog_server_ledger/prolog_server/ledger/default_account_hierarchy.xml?token=AAA34ZATJ5VPKDNFZXQRHVK434H2M</accountHierarchyUrl>
    -->

    <actionTaxonomy>
      <!-- fixme, should not all have tradingAccount InvestmentIncome -->
      <action>
        <id>Invest_In</id>
        <description>Shares</description>
        <exchangeAccount>FinancialInvestments</exchangeAccount>
        <tradingAccount>InvestmentIncome</tradingAccount>
      </action>
      <action>
        <id>Dispose_Off</id>
        <description>Shares</description>
        <exchangeAccount>FinancialInvestments</exchangeAccount>
        <tradingAccount>InvestmentIncome</tradingAccount>
      </action>
      <action>
        <id>Borrow</id>
        <description>Shares</description>
        <exchangeAccount>NoncurrentLoans</exchangeAccount>
        <tradingAccount>InvestmentIncome</tradingAccount>
      </action>
      <action>
        <id>Introduce_Capital</id>
        <description>Unit_Investment</description>
        <exchangeAccount>ShareCapital</exchangeAccount>
        <tradingAccount>InvestmentIncome</tradingAccount>
      </action>
      <action>
        <id>Gain</id>
        <description>Unit_Investment</description>
        <exchangeAccount>ShareCapital</exchangeAccount>
        <tradingAccount>InvestmentIncome</tradingAccount>
      </action>
      <action>
        <id>Loss</id>
        <description>No Description</description>
        <exchangeAccount>ShareCapital</exchangeAccount>
        <tradingAccount>InvestmentIncome</tradingAccount>
      </action>
      <action>
        <id>PayBank</id>
        <description>No Description</description>
        <exchangeAccount>BankCharges</exchangeAccount>
        <tradingAccount>InvestmentIncome</tradingAccount>
      </action>
    </actionTaxonomy>

    <livestockData>
      <type>Sheep</type>
      <naturalIncreaseValuePerUnit>54</naturalIncreaseValuePerUnit>
      <!-- <currency>AUD</currency> -->
      <events>

        <dayEndCount>
          <date>2012-01-30</date>
          <cost>1234</cost>
          <count>27</count>
        </dayEndCount>

        <naturalIncrease>
          <!-- before the report period -->
          <date>2010-01-30</date>
          <count>27</count>
        </naturalIncrease>

        <naturalIncrease>
          <date>2018-01-30</date>
          <count>42</count>
        </naturalIncrease>

        <loss>
          <date>2018-02-01</date>
          <count>1</count>
        </loss>
        <rations>
          <date>2018-02-01</date>
          <count>11</count>
        </rations>
      </events>
    </livestockData>  

    <bankStatement>
      <title>Bank Statement</title>
      <period>2010-01-01 - 2010-06-30</period>
      <accountDetails>
        <accountNo>1-1110</accountNo>
        <!-- accountName must match tag name in XBRL taxonomy. -->
        <accountName>NationalAustraliaBank</accountName>
        <dateofBankStatement>2018-09-30</dateofBankStatement>
        <bankID>Commonwealth Bank</bankID>
        <currency>AUD</currency>
        <transactions>

         <!-- one part of the livestock functionality is processing additional types of transactions.
         since the only thing affecting a bank account that the user can do with livestock is buying and selling,
         then don't need to tag their transactions with description. If money goes out of bank account,
         they bought, if in, they sold. This therefore falls out of the scope of the action taxonomy abstraction,
         so, to recognize livestock unit types, we'll probably require a table of livestock types in the input -->

          <transaction>
            <transdate>2018-03-02</transdate>
            <!-- sell 30 sheep -->
            <debit>0</debit>
            <credit>500</credit>
            <unit>30</unit>
            <unitType>Sheep</unitType>
          </transaction>
          <transaction>
            <transdate>2018-03-02</transdate>
            <!-- buy 3 sheep that can sing-->
            <debit>1800</debit>
            <credit>0</credit>
            <unit>3</unit>
            <unitType>Sheep</unitType>
          </transaction>

        </transactions>
      </accountDetails>
    </bankStatement>
  </balanceSheetRequest>
</reports>
